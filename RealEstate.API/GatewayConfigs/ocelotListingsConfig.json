{
  "Routes": [
// Listings Web API
    {
      // Create
      "UpstreamPathTemplate": "api/listing/create",
      "UpstreamHttpMethod": [ "Post" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": { "Role": [ "Administrator", "Agent" ] },

      "DownstreamPathTemplate": "/api/listing/create",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Get all
    {
      "UpstreamPathTemplate": "/api/listing/getall",
      "UpstreamHttpMethod": [ "Get" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },

      "DownstreamPathTemplate": "/api/listing/getall",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Get by ID
    {
      "UpstreamPathTemplate": "/api/listing/getbyid/{id}",
      "UpstreamHttpMethod": [ "Get" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },

      "DownstreamPathTemplate": "/api/listing/getbyid/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Update
    {
      "UpstreamPathTemplate": "/api/listing/update/{id}",
      "UpstreamHttpMethod": [ "Put" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": { "Role": [ "Administrator", "Agent" ] },

      "DownstreamPathTemplate": "/api/listing/update/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Delete
    {
      "UpstreamPathTemplate": "/api/listing/delete/{id}",
      "UpstreamHttpMethod": [ "Delete" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": { "Role": [ "Administrator", "Agent" ] },

      "DownstreamPathTemplate": "/api/listing/delete/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Hard Delete
    {
      "UpstreamPathTemplate": "/api/listing/harddelete/{id}",
      "UpstreamHttpMethod": [ "Delete" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": { "Role": "Administrator" },

      "DownstreamPathTemplate": "/api/listing/harddelete/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Exists
    {
      "UpstreamPathTemplate": "api/listing/exists/{id}",
      "UpstreamHttpMethod": [ "Get" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },

      "DownstreamPathTemplate": "api/listing/exists/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ]
    },
    // Search
    {
      "UpstreamPathTemplate": "/api/listing/search/{searchTerm}",
      "UpstreamHttpMethod": [ "Get" ],

      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },

      "DownstreamPathTemplate": "/api/listing/search/{searchTerm}",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-webapi",
          "Port": 80
        }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "60s",
        "PeriodTimespan": 60,
        "Limit": 100
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9000"
  }
}